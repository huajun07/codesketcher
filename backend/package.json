		"eslint": "^8.40.0",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"pino-pretty": "^10.0.0",
		"prettier": "^2.8.8",
		"serverless": "^3.31.0",
		"serverless-dotenv-plugin": "^6.0.0",
